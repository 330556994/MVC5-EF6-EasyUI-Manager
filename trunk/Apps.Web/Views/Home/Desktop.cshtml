    function SetWebpartLayout() {

        var winWidth = $(window).width();
        var winHeight = $(window).height();
        if (winHeight < 800)
        {
            winWidth = 1280;
            winHeight = 800;
        }
        var _windowWidth = winWidth - 10;
        var _windowHeight = winHeight-12;
        $("#shortcutPart").width(_windowWidth - 50).height(140);
