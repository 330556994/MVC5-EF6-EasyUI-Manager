@{
    //主题
    string themes = Session["themes"] == null ? "redlight" : Session["themes"].ToString();
    string info = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    }
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

   

    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/easyui/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/easyui/easyui-lang-zh-CN.js")"></script>
    <link href="@Url.Content("~/Content/themes/base/easyui.css")" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/" + themes + "/css")
    @Scripts.Render("~/bundles/easyui/easyuiplus")
    @Scripts.Render("~/bundles/easyui/datagridfilter")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/jqueryfrom")
    <script src="@Url.Content("~/Scripts/easyui/easyui-lang-" + info + ".js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src ="@Url.Content("~/Scripts/jquery.validate.unobtrusive.plus.js")" type="text/javascript"></script>
    <script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
    <link href="~/Content/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    @RenderBody()
</body>
</html>
